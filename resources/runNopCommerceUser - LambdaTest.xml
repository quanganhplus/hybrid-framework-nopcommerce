<?xml version="1.0" encoding="UTF-8"?>
<suite name="NopCommerce - User">

	<parameter name = "appUrl" value = "https://demo.nopcommerce.com/"/>

	<listeners>
		<listener class-name="commons.MethodListener"/>
		<listener class-name="reportConfig.ReportNGListener"/>
		<listener class-name="reportConfig.ExtentTestListener"/>
		<listener class-name="reportConfig.AllureTestListener"/>
    	<listener class-name="org.uncommons.reportng.HTMLReporter"/>
    	<listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
	</listeners>


   <test name="Run on SAFARI">
  	<parameter name="browser" value="Safari"/>
  	<parameter name="browserVersion" value="15.0" />
  	<parameter name="osName" value="MacOS Monterey" />
    <classes>
      <class name="fpt.nopcommerce.cloud.Level_20_Data_Driven_LambdaTest"/>
    </classes>
  </test> 

  <test name="Run on CHROME">
  	<parameter name="browser" value="Chrome"/>
  	<parameter name="browserVersion" value="105.0" />
  	<parameter name="osName" value="Windows 11" />
    <classes>
      <class name="fpt.nopcommerce.cloud.Level_20_Data_Driven_LambdaTest"/>
    </classes>
  </test>  
	
  
    
</suite>